<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleDocuments">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drivers License"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="16dp" />



    <ImageView
        android:id="@+id/licenseNumberImage"
        android:layout_width="118dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:background="@drawable/text_border"
        app:srcCompat="@drawable/contract"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="50dp"></ImageView>

    <ImageView
        android:id="@+id/licenseExpiryImage"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/text_border"
        app:srcCompat="@drawable/agreement_1"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Registration Certificate"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="217dp" />

    <ImageView
        android:id="@+id/RegistrationCertificate"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/text_border"
        app:srcCompat="@drawable/agreement_1"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="251dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insurance Certificate"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="414dp" />

    <ImageView
        android:id="@+id/InsuranceCertificate"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/text_border"
        app:srcCompat="@drawable/agreement_1"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="448dp" />


</androidx.constraintlayout.widget.ConstraintLayout>