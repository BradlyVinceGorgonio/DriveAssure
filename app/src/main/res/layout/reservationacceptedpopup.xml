<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#92D7FF">

    <!-- Add your custom content here -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/editText"
            android:textColor="@color/black"
            android:text="SUCCESS"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_centerVertical="true"
            android:hint="Enter text"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/carfast"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="The renter's request has been accepted. The renter will now proceed to process their details, make payments, and sign the contracts. Please allow some time for their verifications. Thank you for your patience!"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/OKayButton"
            android:layout_width="100dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="OK"
            android:layout_centerInParent="true"
            android:layout_margin="50dp"
            android:layout_height="50dp">

        </Button>
    </RelativeLayout>



</LinearLayout>
