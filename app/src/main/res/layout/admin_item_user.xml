<!-- item_user.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayoutAdmin"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/userDisplayImage"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/personvector"
            android:background="@drawable/border_item"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/userDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="Name"
                android:background="@drawable/border_item"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N03-21-234257"

                android:id="@+id/userDisplayLicenseNum"
                android:textColor="#D9512C"
                android:background="@drawable/border_item"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userDisplayLicenseExp"
                android:textColor="@color/black"
                android:text="03/21/2024"
                android:textSize="16dp"
                android:background="@drawable/border_item"/>
            <TextView
                android:id="@+id/userDisplayNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="09391920816"
                android:textSize="14sp"
                android:background="@drawable/border_item"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>