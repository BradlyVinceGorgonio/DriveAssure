 <!-- item_user.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayoutAdmin"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@color/blue"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:elevation="25dp"
            >

        <ImageView
            android:id="@+id/userDisplayImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/personvector"
            android:background="@drawable/border_item"

            />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/userDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginTop="0dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N03-21-234257"
                android:layout_marginTop="-2dp"
                android:id="@+id/userDisplayLicenseNum"
                android:textColor="#D9512C"
           />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userDisplayLicenseExp"
                android:textColor="@color/black"
                android:text="03/21/2024"
                android:textSize="16dp"
                android:layout_marginTop="1dp"
               />
            <TextView
                android:id="@+id/userDisplayNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="09391920816"
                android:textSize="14sp"
                android:layout_marginTop="1dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>