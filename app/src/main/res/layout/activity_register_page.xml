<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DriveAssure"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"></TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bridging the Gap Between Car Owners \nand Renters"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.016">

    </TextView>

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:background="@drawable/back_26"
        android:contentDescription="next button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="160dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655"> <!-- Background color of the CardView -->



        <!-- EditText Widgets -->

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginTop="380dp"
           android:gravity="center"
            android:layout_marginLeft="135dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassRegister"
            app:layout_constraintVertical_bias="0.203"
            tools:text="NEXT" />


        <EditText
            android:id="@+id/nameRegister"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/text_border"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:hint="Name"
            android:drawableLeft="@drawable/profile_39"
            android:inputType="text"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <EditText
            android:id="@+id/emailRegister"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/text_border"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            android:hint="Email"
            android:drawableLeft="@drawable/email_205"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/nameRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/contactRegister"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/text_border"
            android:ems="11"
            android:hint="Contact Number"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="170dp"
            android:inputType="number"
            android:drawableLeft="@drawable/phone_90"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/emailRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/text_border"
            android:drawableLeft="@drawable/password_152"
            android:drawableRight="@drawable/hide_12"
            android:ems="10"
            android:hint="Password"
            android:longClickable="false"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactRegister" />

        <EditText
            android:id="@+id/confirmPassRegister"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/text_border"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="310dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/password_153"
            android:drawableRight="@drawable/hide_12"
            android:paddingRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>