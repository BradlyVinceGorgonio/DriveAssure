<!-- item_user.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ownerListingsItems"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10sp"
    app:cardElevation="100dp"
    app:cardCornerRadius="15dp"
    android:background="@drawable/textview_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/carImageDisplay"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/carvector"/>

            <!-- Heart icon ToggleButton on the top-right corner -->
            <ToggleButton
                android:id="@+id/heartToggleButton"
                android:layout_width="25dp"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:button="@drawable/heart_icon"
                android:checked="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue">

            <TextView
                android:id="@+id/carNameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="TOYOTA HONDA CIVIC"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚± 5000 /day"
                android:layout_margin="5dp"
                android:id="@+id/carPriceDisplay"
                android:textColor="#D9512C"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carLocationDisplay"
                android:text="Taguig City"
                android:layout_margin="5dp"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/carTransmissionDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transmission: Manual"
                android:layout_margin="5dp"
                android:textSize="14sp"></TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>