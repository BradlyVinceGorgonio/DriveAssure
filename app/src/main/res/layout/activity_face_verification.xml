<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaceVerification"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="412dp"
        android:layout_height="274dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/backButton3"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_26"
            android:contentDescription="backtoLogin"
            tools:ignore="TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-90dp"
            android:text="Identity Verification"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"></TextView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="365dp"
        android:layout_height="431dp"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewer"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-90dp"
            android:background="@drawable/circle_border"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp" />

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-90dp"
            android:background="@drawable/circle_border"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp" />

        <ImageButton
            android:id="@+id/captureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera_220"
            android:layout_gravity="center"
            android:contentDescription="picture take"
            android:layout_marginTop="40dp"></ImageButton>

        <Button
            android:id="@+id/retakeBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:backgroundTint="@color/darkgrey"
            android:text="Retake"
            android:textStyle="bold"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="360dp"
            android:backgroundTint="@color/blue"
            android:text="Submit"
            android:textStyle="bold"
            android:textColor="@color/black"></Button>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>