<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@drawable/cercle"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/are_you_suur"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|top"
        android:lineHeight="30sp"
        android:textSize="30dp"
        android:text="Image Upload  \n Successful"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideeline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp" />

    <Button
        android:id="@+id/okayPopupButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Return to Home Page"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideeline"
        app:layout_constraintTop_toBottomOf="@+id/are_you_suur" />




</androidx.constraintlayout.widget.ConstraintLayout>
